<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <h2 class="text-center">@Model.Title</h2>
            <p class="text-muted text-center">
                <small>By @Model.AuthorName on @Model.CreatedAt?.ToString("MMM dd, yyyy hh:mm tt")</small>
            </p>
            <p class="text-center">
                Status:
                <span class="badge
                    @(Model.Status == "Published" ? "bg-success" :
                      (Model.Status == "Draft" ? "bg-secondary" : "bg-danger"))">
                    @Model.Status
                </span>
            </p>
            <img src="@Model.ImagePath" alt="Image" class="img-fluid mb-4 d-block mx-auto" style="max-width: 50%; height: auto;" />
            <p>@Html.Raw(Model.Description)</p>
        </div>
    </div>
</div>
